<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />

        <service id="tierperso_sylius_amazon_pay_plugin.action.capture" class="Tierperso\SyliusAmazonPayPlugin\Payum\Action\CaptureAction">
            <tag name="payum.action" factory="amazonpay" alias="payum.action.capture"/>
        </service>

        <service id="tierperso_sylius_amazon_pay_plugin.action.convert_payment" class="Tierperso\SyliusAmazonPayPlugin\Payum\Action\ConvertPaymentAction">
            <argument type="service" id="sylius.payment_description_provider"/>
            <tag name="payum.action" factory="amazonpay" alias="payum.action.convert_payment"/>
        </service>

        <service id="tierperso_sylius_amazon_pay_plugin.action.status" class="Tierperso\SyliusAmazonPayPlugin\Payum\Action\StatusAction">
            <tag name="payum.action" factory="amazonpay" alias="payum.action.status"/>
        </service>
    </services>
</container>
