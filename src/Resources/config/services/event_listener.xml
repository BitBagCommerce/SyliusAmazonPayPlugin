<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="tierperso_sylius_amazon_pay_plugin.event_listener.javascript" class="Sylius\Bundle\UiBundle\Block\BlockEventListener">
            <argument>TierpersoSyliusAmazonPayPlugin::_javascript.html.twig</argument>
            <tag name="kernel.event_listener" event="sonata.block.event.sylius.shop.layout.javascripts" method="onBlockEvent" />
        </service>

        <service id="tierperso_sylius_amazon_pay_plugin.event_listener.amazon_widget" class="Sylius\Bundle\UiBundle\Block\BlockEventListener">
            <argument>TierpersoSyliusAmazonPayPlugin:AmazonPay:button.html.twig</argument>
            <tag name="kernel.event_listener" event="sonata.block.event.sylius.shop.cart.summary.after_totals" method="onBlockEvent"/>
        </service>
    </services>
</container>
