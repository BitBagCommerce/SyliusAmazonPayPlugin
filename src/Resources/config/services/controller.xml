<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />

        <service id="tierperso_sylius_amazon_pay_plugin.controller.action.amazon_pay_start" class="Tierperso\SyliusAmazonPayPlugin\Controller\Action\AmazonPayStartAction">
            <argument type="service" id="templating" />
        </service>

        <service id="tierperso_sylius_amazon_pay_plugin.controller.action.initialize" class="Tierperso\SyliusAmazonPayPlugin\Controller\Action\AmazonPayInitializeAction">
            <argument type="service" id="sylius.context.cart" />
            <argument type="service" id="tierperso_sylius_amazon_pay_plugin.resolver.payment_method" />
            <argument type="service" id="tierperso.sylius_amazon_pay_plugin.amazon_pay_api_client" />
            <argument type="service" id="sylius.order_processing.order_processor" />
            <argument type="service" id="sylius.manager.order" />
        </service>

        <service id="tierperso_sylius_amazon_pay_plugin.controller.action.order_reference_create" class="Tierperso\SyliusAmazonPayPlugin\Controller\Action\OrderReferenceCreateAction">
            <argument type="service" id="sylius.context.cart" />
            <argument type="service" id="tierperso.sylius_amazon_pay_plugin.amazon_pay_api_client" />
            <argument type="service" id="sylius.manager.order" />
        </service>

        <service id="tierperso_sylius_amazon_pay_plugin.controller.action.address_select" class="Tierperso\SyliusAmazonPayPlugin\Controller\Action\AddressSelectAction">
            <argument type="service" id="sylius.context.cart" />
            <argument type="service" id="tierperso.sylius_amazon_pay_plugin.amazon_pay_api_client" />
        </service>
    </services>
</container>
